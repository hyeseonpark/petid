<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 체크박스 해제 상태 -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <stroke android:color="#D9D9D9" android:width="1dp" />
            <solid android:color="@color/white" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>

    <!-- 체크박스 선택 상태 -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#2F8AF4" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

            <item
                android:drawable="@drawable/ic_check"
                android:width="10dp"
                android:height="7dp" android:gravity="center"/>
        </layer-list>
    </item>
</selector>