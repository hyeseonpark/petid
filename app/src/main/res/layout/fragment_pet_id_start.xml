<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.view.generate.PetIdStartFragment"
    tools:layout="@layout/fragment_pet_id_start"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_current_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="34dp"
            android:text="1/7"
            android:textSize="18sp"
            android:textColor="@color/petid_clear_blue"
            android:textFontWeight="700"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/petid_generate_step_1_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="33dp"
            android:textSize="24dp"
            android:textFontWeight="500"
            android:textColor="@color/petid_title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="33dp"
            android:text="@string/petid_generate_step_1_subtitle"
            android:textSize="16sp"
            android:textFontWeight="400" />

        <RadioGroup
            android:id="@+id/radio_button_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="33dp"
            android:layout_marginTop="102dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/button_na"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@drawable/button_background_petid_start"
                android:gravity="center"
                android:text="@string/petid_generate_step_1_button_1"
                android:textSize="16sp"
                android:textColor="@color/radio_button_text_color_petid_start"
                android:button="@null"
                android:stateListAnimator="@null"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>

            <RadioButton
                android:id="@+id/button_external"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_background_petid_start"
                android:gravity="center"
                android:text="@string/petid_generate_step_1_button_2"
                android:textSize="16sp"
                android:textColor="@color/radio_button_text_color_petid_start"
                android:button="@null"
                android:stateListAnimator="@null"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>

            <RadioButton
                android:id="@+id/button_internal"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_background_petid_start"
                android:gravity="center"
                android:text="@string/petid_generate_step_1_button_3"
                android:textSize="16sp"
                android:textColor="@color/radio_button_text_color_petid_start"
                android:button="@null"
                android:stateListAnimator="@null"
                android:foreground="?attr/selectableItemBackgroundBorderless"/>

            </RadioGroup>

        </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="@string/next"
        android:textSize="16sp"
        android:textFontWeight="500"
        android:textColor="@color/button_text_color_common"
        style="@style/GenerateCommonButtonStyle"
        android:enabled="false"/>

</LinearLayout>
