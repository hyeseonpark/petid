<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="26dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:layout_marginTop="26dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="209dp">

            <ImageView
                android:id="@+id/imageView_content_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#D9D9D9"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="@drawable/layout_content_preview_chip_background"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginRight="12dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/textView_content_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반려Tip"
                    android:textColor="@color/petid_underbar"
                    android:textFontWeight="400"
                    android:textSize="12dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="9dp"
        android:text="강아지 귀청소 하는 방법"
        android:textSize="18sp"
        android:textFontWeight="800"
        android:textColor="@color/petid_title"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_content_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="18dp"
        android:text="강아지의 귀는 강아지 신체 중에서도 아주 예민한 부분이라고 합니다. 특히나 강아지 귀청소는 수명 및 건강…"
        android:textFontWeight="400"
        android:textSize="13dp"
        android:textColor="@color/petid_subtitle"
        android:maxLines="2"
        android:ellipsize="end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_content_like"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:minWidth="56dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/button_content_like_background"
            android:stateListAnimator="@null"
            android:text="좋아요"
            android:textColor="@drawable/button_content_like_text_color"
            android:textSize="12sp"
            android:textFontWeight="400"
            android:drawableLeft="@drawable/ic_like"
            android:drawableTint="@drawable/button_content_like_text_color"
            android:drawablePadding="5dp"
            android:paddingStart="11dp"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:src="@drawable/ic_share_outline"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>

</LinearLayout>