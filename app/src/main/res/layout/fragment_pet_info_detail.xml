<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.view.my.PetInfoDetailFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="31dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView_profile"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            android:src="@color/d9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_fill_circle"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_profile"
            app:layout_constraintEnd_toEndOf="@+id/imageView_profile"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/petid_title"
                android:textSize="16sp"
                android:textFontWeight="400"  />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="덕구"
                android:textColor="@color/petid_subtitle"
                android:textSize="16sp"
                android:textFontWeight="400"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_birth_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birth"
                android:textColor="@color/petid_title"
                android:textSize="16sp"
                android:textFontWeight="400"  />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="2022.03.02"
                android:textColor="@color/petid_subtitle"
                android:textSize="16sp"
                android:textFontWeight="400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_gender_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textColor="@color/petid_title"
                android:textSize="16sp"
                android:textFontWeight="400"  />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="남, 중성화X"
                android:textColor="@color/petid_subtitle"
                android:textSize="16sp"
                android:textFontWeight="400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textColor="@color/petid_title"
                android:textSize="16sp"
                android:textFontWeight="400"  />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="믹스 푸들"
                android:textColor="@color/petid_subtitle"
                android:textSize="16sp"
                android:textFontWeight="400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_weight_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textColor="@color/petid_title"
                android:textSize="16sp"
                android:textFontWeight="400"  />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="4kg"
                android:textColor="@color/petid_subtitle"
                android:textSize="16sp"
                android:textFontWeight="400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_feature_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feature"
                android:textColor="@color/petid_title"
                android:textSize="16sp"
                android:textFontWeight="400"  />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="갈색, 곱슬, 장모"
                android:textColor="@color/petid_subtitle"
                android:textSize="16sp"
                android:textFontWeight="400" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_pet_create_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_create_status"
                android:layout_weight="1"
                android:textColor="@color/petid_title"
                android:textSize="16sp"
                android:textFontWeight="400"  />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_petid_status_null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/pet_info_id_null"
                android:textColor="@color/red"
                android:textSize="16sp"
                android:textFontWeight="400" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView_petid_status_has_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/pet_info_id_has_data"
                android:textColor="@color/petid_clear_blue"
                android:textSize="16sp"
                android:textFontWeight="400"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>