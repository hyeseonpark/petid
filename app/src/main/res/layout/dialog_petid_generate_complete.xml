<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:background="@drawable/dialog_background_common"
    android:gravity="center"
    android:paddingTop="46dp"
    android:paddingHorizontal="33dp"
    android:paddingBottom="50dp">

    <TextView
        android:id="@+id/textView_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/petid_title"
        tools:text="@string/dialog_petid_generate_complete" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hospital_image"
        android:alpha="0.5"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="53dp" />

    <Button
        android:id="@+id/button_single"
        android:background="@drawable/button_background_common"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="병원 예약하기"
        android:textSize="16sp"
        android:textColor="@color/white"/>

</LinearLayout>