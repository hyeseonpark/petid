<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout="@layout/fragment_my_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="92dp">

        <include
            android:id="@+id/top_bar"
            layout="@layout/top_bar_common"
            app:title="@{@string/main_my_title}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 내 정보 -->
        <LinearLayout
            android:id="@+id/layout_myinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="33dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mypage_icon"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="28dp"
                android:layout_marginRight="18dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textView_user_name"
                    android:text="랜덤이름"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textFontWeight="500"/>

                <TextView
                    android:text="@string/update_my_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textFontWeight="400"
                    android:textColor="@color/petid_subtitle"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow_2"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F5F5F5"/>

        <include
            android:id="@+id/layout_pet_info"
            layout="@layout/my_main_list_item_common"
            app:title="@{@string/pet_info_title}" />

        <include
            android:id="@+id/layout_reservation_history"
            layout="@layout/my_main_list_item_common"
            app:title="@{@string/reservation_history_title}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F5F5F5"/>

        <include
            android:id="@+id/layout_terms_agree_info"
            layout="@layout/my_main_list_item_common"
            app:title="@{@string/terms_agree_info_title}" />

        <include
            android:id="@+id/layout_personal_service_info"
            layout="@layout/my_main_list_item_common"
            app:title="@{@string/personal_service_info_title}" />

        <include
            android:id="@+id/layout_notice"
            layout="@layout/my_main_list_item_common"
            app:title="@{@string/notice_title}" />

        <include
            android:id="@+id/layout_qna"
            layout="@layout/my_main_list_item_common"
            app:title="@{@string/qna_title}" />

        <include
            android:id="@+id/layout_withdraw"
            layout="@layout/my_main_list_item_common"
            app:title="@{@string/withdraw_title}" />

        <TextView
            android:id="@+id/textView_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/app_version"
            android:textSize="14sp"
            android:textFontWeight="500"
            android:textColor="@color/petid_subtitle"/>

    </LinearLayout>

</layout>