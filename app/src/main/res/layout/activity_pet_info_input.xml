    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/top_bar"
            layout="@layout/top_bar_common" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="33dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_current_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:layout_marginLeft="1dp"
                    android:text="3/7"
                    android:textSize="18sp"
                    android:textColor="@color/petid_clear_blue"
                    android:textFontWeight="700"/>

                <TextView
                    android:id="@+id/textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/petid_generate_step_3_title"
                    android:layout_marginTop="10dp"
                    android:textSize="24dp"
                    android:textFontWeight="500"
                    android:textColor="@color/petid_title"/>

                <include
                    android:id="@+id/edit_text_name"
                    layout="@layout/edittext_common_rectangle"
                    app:title="@{@string/pet_name}"
                    app:hint="@{@string/name_hint}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp" />

                <include
                    android:id="@+id/edit_text_birth"
                    layout="@layout/edittext_calendar"
                    app:title="@{@string/birthday}"
                    app:hint="@{@string/birthday_hint}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp" />

                <include
                    android:id="@+id/radio_group_gender"
                    layout="@layout/radio_group_common"
                    app:title="@{@string/gender}"
                    app:textFirst="@{@string/male}"
                    app:textSecond="@{@string/female}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp" />


                <include
                    android:id="@+id/edit_neutering_date"
                    layout="@layout/edittext_calendar"
                    app:title="@{@string/neutering_date}"
                    app:hint="@{@string/neutering_date_hint}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp" />

