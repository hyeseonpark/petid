<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="buttonText"
            type="String" />
        <variable
            name="disable"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/button_background_common"
            android:text="@{buttonText == null ? `Default Title Text` : buttonText}"
            android:textSize="16sp"
            android:textColor="@color/button_text_color_common"
            android:enabled="@{!disable}"
            android:contentDescription="common button"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:foreground="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</layout>