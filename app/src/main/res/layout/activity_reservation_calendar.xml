<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <include
            android:id="@+id/top_bar"
            layout="@layout/top_bar_common"
            app:title="@{`동물병원`}"
            app:back="@{true}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_reservation_calendar_visit_date_time"
                    android:layout_marginTop="22dp"
                    android:textSize="20dp"
                    android:textFontWeight="500"
                    android:textColor="@color/petid_title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/hospital_reservation_calendar_visit_date_time_desc"
                    android:textSize="14dp"
                    android:textFontWeight="400"
                    android:textColor="@color/petid_subtitle"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="-8dp"
                    android:layout_marginTop="18dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="27dp"
                    android:orientation="horizontal"
                    android:background="@drawable/layout_round_background_fafafa">

                    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                        android:id="@+id/calendar_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:mcv_leftArrow="@drawable/ic_back"
                        app:mcv_rightArrow="@drawable/ic_right_arrow"
                        app:mcv_selectionMode="single"
                        app:mcv_firstDayOfWeek="monday"
                        app:mcv_showOtherDates="all"
                        app:mcv_selectionColor="@color/petid_clear_blue"/>
        <!--
                        app:mcv_dateTextAppearance="@style/CalenderViewDateCustomText"
                        app:mcv_weekDayTextAppearance="@style/CalenderViewWeekCustomText"-->

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hospital_reservation_calendar_avilable_time"
                    android:layout_marginTop="42dp"
                    android:textSize="20dp"
                    android:textFontWeight="500"
                    android:textColor="@color/petid_title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="오전"
                    android:textSize="13dp"
                    android:textFontWeight="500"
                    android:textColor="#515151"/>

            </LinearLayout>

        </ScrollView>

        <include
            android:id="@+id/buttonConfirm"
            layout="@layout/button_common"
            app:buttonText="@{@string/confirm}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp"
            android:layout_marginHorizontal="33dp" />


    </LinearLayout>

</layout>