<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- camera 권한 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- targetSDK 18 이하, 19부터는 MediaStore나 ContentProvider를 통해 접근해야함 -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>
    <!-- targetSDK 32 이하 -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <!-- targetSDK 33 이상 -->
    <uses-permission
        android:name="android.permission.READ_MEDIA_IMAGES"
        android:minSdkVersion="33" />

    <!-- targetSDK 34 이면서 Android OS 14 인 경우 -->
    <uses-permission android:name="android.permission.READ_MEDIA_VISUAL_USER_SELECTED" />

    <application
        android:name=".common.GlobalApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetId"
        tools:targetApi="31">
        <!-- FileProvider 선언 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".ui.view.generate.GeneratePetidMainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.blog.ContentDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.my.NoticeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.my.ReservationHistoryInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.my.MyPetInfoUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.my.MyPetInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.my.MyInfoUpdateActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.my.MyInfoActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.hospital.ReservationProcessFinishActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.hospital.ReservationCalendarActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.hospital.CompleteReservationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.hospital.HospitalDetailActivity"
            android:exported="false" />

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_native_app_key" /> <!-- 카카오 로그인, 인가코드를 받기 위한 액티비티 -->
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauth"
                    android:scheme="kakaoe73834f33dc8405c99f414788b9b1b23" />
            </intent-filter>
        </activity> <!-- FCM -->
        <service
            android:name=".messages.MyFirebaseMessageService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.view.auth.PermissionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.generate.CompleteCardFragment"
            android:exported="false" />
        <activity
            android:name=".ui.view.deleted.GenerateCompleteActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.generate.SignatureFragment"
            android:exported="false" />
        <activity
            android:name=".ui.view.generate.CheckingInfoFragment"
            android:exported="false" />
        <activity
            android:name=".ui.view.generate.ScannedInfoFragment"
            android:exported="false" />
        <activity
            android:name=".ui.view.generate.PetPhotoFragment"
            android:exported="false" />
        <activity
            android:name=".ui.view.generate.PetInfoInputFragment"
            android:exported="false" />
        <activity
            android:name=".ui.view.generate.PetIdStartFragment"
            android:exported="false" />
        <activity
            android:name=".ui.view.auth.SignupCompleteActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.auth.TermsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.auth.SocialAuthActivity"
            android:exported="true">

            <!-- android:theme="@style/Theme.AppCompat"> -->
            <!-- android:theme="@style/Theme.App.Starting"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.deleted.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.generate.UserInfoInputFragment"
            android:exported="false" />
    </application>

</manifest>